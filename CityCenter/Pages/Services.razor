@page "/services"
@using CityCenter.Data
@using CityCenter.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Db
@inject ThemeService ThemeService
<!DOCTYPE html>
<html lang="ru" class="@(ThemeService.IsLightTheme ? "light-theme" : "")">
<head>
<style>
    .services-screen {
        padding: 60px 30px;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #0a0a0a, #111);
        color: white;
        min-height: 100vh;
        width: 100%;
        box-sizing: border-box;
        text-align: center;
    }

    .services-title {
        font-size: 3rem;
        text-align: center;
        margin-bottom: 40px;
        color: #4dabf7;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.6);
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        max-width: 1300px;
        margin: 0 auto;
        padding-bottom: 60px;
    }

    .service-card {
        background: linear-gradient(135deg, #1b1b1b, #2a2a2a);
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 0 15px rgba(0,0,0,0.6);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(77, 171, 247, 0.4);
        }

    .service-card-img-container {
        width: 100%;
        height: 180px;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 15px;
        position: relative;
    }

    .service-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .service-card:hover img {
        transform: scale(1.05);
    }

    .no-photo-placeholder {
        height: 100%;
        background: linear-gradient(135deg, #333, #444);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #aaa;
        font-size: 1rem;
    }

    .service-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .service-card h3 {
        margin: 0 0 10px 0;
        font-size: 1.4rem;
        color: #fff;
    }

    .service-card p {
        margin: 5px 0;
        color: #ccc;
        font-size: 0.95rem;
    }

    .service-card-link {
        display: inline-block;
        margin-top: auto;
        padding: 10px 16px;
        background-color: #4dabf7;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-align: center;
        font-weight: 500;
    }

        .service-card-link:hover {
            background-color: #339af0;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .no-services-message {
        font-size: 1.5rem;
        color: #aaa;
        margin-top: 50px;
        padding: 30px;
        background: rgba(40, 40, 40, 0.5);
        border-radius: 16px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

        .no-photo-placeholder {
            height: 100%;
            background: linear-gradient(135deg, #333, #444);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #aaa;
            font-size: 1rem;
        }
    /* Для светлой темы */
    .light-theme .services-screen {
        background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    }

    .light-theme .service-card {
        background: linear-gradient(135deg, #ffffff, #f5f5f5);
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

        .light-theme .service-card h3 {
            color: #333;
        }

        .light-theme .service-card p {
            color: #666;
        }

    .light-theme .no-photo-placeholder {
        background: linear-gradient(135deg, #e0e0e0, #f0f0f0);
        color: #888;
    }

    .light-theme .no-services-message {
        color: #666;
        background: rgba(220, 220, 220, 0.7);
    }
</style>
</head>
<body class="@(ThemeService.IsLightTheme ? "light-theme" : "")">
<div class="services-screen">
    <h1 class="services-title">Сервисы и услуги</h1>

    @if (Service.Any())
    {
        <div class="services-grid">
            @foreach (var service in Service)
            {
                <div class="service-card">
                        <div class="service-card-img-container">
                            @if (!string.IsNullOrWhiteSpace(service.Ссылка))
                            {
                                var siteUrl = GetFullUrl(service.Ссылка);
                                var faviconUrl = $"https://www.google.com/s2/favicons?sz=128&domain_url={siteUrl}";
                                <img src="@faviconUrl"
                                     alt="Логотип сайта"
                                     onerror="this.onerror=null; this.src='/images/placeholder.png';" />
                            }
                            else if (!string.IsNullOrWhiteSpace(service.Фото))
                            {
                                <img src="@service.Фото" alt="Фото сервиса" />
                            }
                            else
                            {
                                <div class="no-photo-placeholder">
                                    Фото отсутствует
                                </div>
                            }
                        </div>


                    <div class="service-card-content">
                        <h3>@service.Название</h3>
                        <p><strong>Этаж:</strong> @service.Этаж</p>
                        <p><strong>Тип услуги:</strong> @service.ТипУслуги</p>

                        @if (!string.IsNullOrWhiteSpace(service.Ссылка))
                        {
                            <a href="@GetFullUrl(service.Ссылка)" target="_blank" class="service-card-link">
                                ℹ️ Подробнее
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-services-message">
            <p>Скоро тут появятся новые сервисы и услуги!</p>
            <p>Мы работаем над этим 🛠️</p>
        </div>
    }
</div>
</body>
</html>
@code {
    private List<ServiceInfo> Service = new();

    protected override async Task OnInitializedAsync()
    {
        Service = await Db.Помещенияs
            .Where(p => p.IdНазначения == 1) // ID 9 - сервисы и услуги
            .Select(p => new ServiceInfo
                {
                    Название = p.Название,
                    Этаж = p.Этаж,
                    Фото = p.Фото,
                    Ссылка = p.СсылкаНаМагазин,
                    ТипУслуги = p.Описание ?? "Различные услуги"
                })
            .ToListAsync();
    }

    private string GetFullUrl(string? url)
    {
        url = url?.Trim();

        if (string.IsNullOrWhiteSpace(url))
            return "#";

        return url.StartsWith("http", StringComparison.OrdinalIgnoreCase)
            ? url
            : $"https://{url}";
    }

    private class ServiceInfo
    {
        public string Название { get; set; }
        public int Этаж { get; set; }
        public string Фото { get; set; }
        public string? Ссылка { get; set; }
        public string ТипУслуги { get; set; }
    }
}
